<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nasss.taller.motonasss.controllers.MainController"
            stylesheets="@styles/styles.css">

    <!-- Panel superior de bÃºsqueda -->
    <top>
        <HBox spacing="10" padding="10">
            <Label text="Buscar venta:"/>
            <TextField fx:id="txtBuscarVenta" promptText="ID o fecha..."/>
        </HBox>
    </top>

    <!-- Panel central con ventas y detalle -->
    <center>
        <SplitPane orientation="HORIZONTAL">

            <!-- Tabla de ventas -->
            <VBox spacing="5" padding="10">
                <Label text="Ventas"/>
                <TableView fx:id="tablaVentas" prefWidth="400">
                    <columns>
                        <TableColumn fx:id="colIdVenta" text="ID" prefWidth="100"/>
                        <TableColumn fx:id="colFechaVenta" text="Fecha" prefWidth="200"/>
                        <TableColumn fx:id="colTotalVenta" text="Total" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Panel detalle de venta -->
            <VBox spacing="5" padding="10">
                <Label text="Detalle de venta"/>
                <TableView fx:id="tablaDetalleVenta">
                    <columns>
                        <TableColumn fx:id="colDetProducto" text="Producto" prefWidth="200"/>
                        <TableColumn fx:id="colDetCantidad" text="Cantidad" prefWidth="80"/>
                        <TableColumn fx:id="colDetPrecio" text="Precio unitario" prefWidth="150"/>
                        <TableColumn fx:id="colDetSubtotal" text="Subtotal" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
